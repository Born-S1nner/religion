<p id="notice"><%= notice %></p>

<h1 class="text-center">Messages</h1>

<table class="table table-dark table-striped table-bordered">

  <ul>
    <% @messages.each do |message| %>
      
      <li class="card">
        <h5 class="card-header"><%= message.username %></h5>
        <div class="card-body">
          <h5 class="card-title"><%= message.user_id %></h5>
          <p class="card-text"><%= message.blog %></p>
          <%= link_to 'Show', message %>
        </div>
      </li>
      
    <% end %>
  </ul>
</table>

<br>

<%= link_to 'New Message', new_message_path, class:"btn btn-primary btn-lg btn-block" %>
