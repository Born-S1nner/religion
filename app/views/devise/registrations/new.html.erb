<h2>Sign up</h2>
<hr/>
<%= form_for(resource, as: resource_name, :url => user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.text_field :username, autofocus: true, class:"form-control", autocomplete: "username", placeholder:"Username" %>
  </div>
  <br/>
  <div class="field form-group">
    <%= f.text_field :religion, autofocus: true, class:"form-control", autocomplete: "religion", placeholder:"Religion" %>
  </div>
  <br/>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder:"Email" %>
  </div>
  <br/>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password (6 characters minimum)"   %>
  </div>
  <br/>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Rewrite Password"  %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Sign In", class:"btn btn-primary" %>
  </div>
  <hr/>
<% end %>

<%= render "devise/shared/links" %>
