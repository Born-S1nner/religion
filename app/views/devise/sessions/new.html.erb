<h2 class="text-center text-light">Log in</h2>
<br/>
<div class="bg-dark">
<br/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field form-group">
    <%= f.text_field :username, autofocus: true, class:"form-control", autocomplete: "username", placeholder:"Username" %>
  </div>
  
  <br/>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder:"Email" %>
  </div>
  <br/>
  <div class="field form-group">
    <%= f.password_field :password, autofocus: true, class:"form-control", autocomplete: "password", placeholder:"Password" %>
  </div>
  <br/>
  <% if devise_mapping.rememberable? %>
    <div class="field form-check">
      <%= f.check_box :remember_me, class:"form-check-input", id:"exampleCheck1" %>
      <%= f.label :remember_me, class:"form-check-label", for:"exampleCheck1" %>
    </div>
  <% end %>
  <br/>
  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </div>
  <br/>
<% end %>
</div>
<br/>
<%= render "devise/shared/links" %>
