<p id="notice"><%= notice %></p>
<h1 class="text-center">Peers</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Religion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peers.each do |peer| %>
      <tr>
        <td><%= peer.username %></td>
        <td><%= peer.email %></td>
        <td><%= peer.religion %></td>
        <td><%= link_to 'Show', peer %></td>
        <td><%= link_to 'Edit', edit_peer_path(peer) %></td>
        <td><%= link_to 'Destroy', peer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Peer', new_peer_path, class:"btn btn-primary" %>

<%= link_to 'Back', '/', class:"btn btn-secondary text-white" %>
